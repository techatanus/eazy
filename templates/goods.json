{
  "category": "goods",
  "module": "Goods Technical Proposal Module",
  "description": "Dynamic System Template (For Implementation). Fully structured for digitization, evaluation scoring, and multi-entity customization.",
  "sections": [
    {
      "title": "Delivery, Methodology & Product Compliance",
      "questions": [
        {
          "id": "1.1",
          "title": "Delivery Plan",
          "mandatory": true,
          "input_type": "file",
          "description": "Upload a detailed delivery schedule showing lead times, logistics plan, and delivery milestones."
        },
        {
          "id": "1.2",
          "title": "Product Catalogues / Datasheets",
          "mandatory": true,
          "input_type": "multi-file",
          "description": "Upload manufacturer datasheets, brochures, or product specifications for each item."
        },
        {
          "id": "1.3",
          "title": "Warranty Statement",
          "mandatory": true,
          "input_type": "file",
          "description": "Provide detailed warranty terms for all supplied goods."
        },
        {
          "id": "1.4",
          "title": "Quality Assurance Documentation",
          "mandatory": false,
          "input_type": "file",
          "description": "Submit any quality control procedures, ISO certifications, or testing protocols."
        }
      ]
    },
    {
      "title": "Personnel & Supply Chain Capability",
      "questions": [
        {
          "id": "2.1",
          "title": "Key Supply Personnel",
          "mandatory": false,
          "input_type": "table",
          "fields": ["Name", "Role", "Experience (Years)", "Qualification", "Attach CV", "Attach Certificates"]
        },
        {
          "id": "2.2",
          "title": "Supply Chain Structure",
          "mandatory": false,
          "input_type": "file",
          "description": "Upload a diagram/organogram showing personnel responsible for sourcing, logistics, and delivery."
        }
      ]
    },
    {
      "title": "Delivery Equipment & Logistics",
      "questions": [
        {
          "id": "3.1",
          "title": "Vehicles / Equipment to Be Used",
          "mandatory": false,
          "input_type": "table",
          "fields": ["Vehicle/Equipment Type", "Quantity", "Ownership Status", "Proof of Ownership or Hire"]
        },
        {
          "id": "3.2",
          "title": "Delivery & Logistics Plan",
          "mandatory": false,
          "input_type": "file",
          "description": "Attach a logistics plan explaining transport, warehousing, packaging, and handling."
        }
      ]
    },
    {
      "title": "Supplier Experience & Past Performance",
      "questions": [
        {
          "id": "4.1",
          "title": "Completed Supply Contracts",
          "mandatory": true,
          "input_type": "table",
          "fields": ["Project Name / Description", "Contract Value", "Client Name", "Year of Completion", "Contact Person", "Completion Certificate", "Award Letter / Contract"]
        },
        {
          "id": "4.2",
          "title": "Ongoing Contracts",
          "mandatory": false,
          "input_type": "table",
          "fields": ["Project Name", "Client", "Contract Value", "Percentage Completion", "Expected Completion Date"]
        }
      ]
    },
    {
      "title": "Technical Compliance with Specifications",
      "questions": [
        {
          "id": "5.1",
          "title": "Compliance Statement",
          "mandatory": true,
          "input_type": "textbox",
          "character_limit": "200-300",
          "description": "Provide a summary describing how your products meet or exceed the technical specifications."
        },
        {
          "id": "5.2",
          "title": "Manufacturer Authorization Form",
          "mandatory": false,
          "input_type": "file",
          "description": "Required for ICT, medical, motor, electrical, chemical/industrial equipment."
        },
        {
          "id": "5.3",
          "title": "Test Reports / Certifications",
          "mandatory": false,
          "input_type": "file",
          "examples": ["KEBS", "ISO", "ASTM/CE", "Calibration Certificates"]
        }
      ]
    },
    {
      "title": "Financial Capacity & Legal Compliance",
      "questions": [
        {
          "id": "6.1",
          "title": "Audited Financial Statements",
          "mandatory": true,
          "input_type": "file",
          "years": "Last 2-3 years"
        },
        {
          "id": "6.2",
          "title": "Bank Statements / Credit Facility Letters",
          "mandatory": true,
          "input_type": "file",
          "notes": "Must be recent (past 6 months)"
        },
        {
          "id": "6.3",
          "title": "Auto-Pulled Statutory Documents",
          "mandatory": false,
          "input_type": "auto",
          "description": "Pulled from supplier profile: Certificate of Incorporation, CR12, Tax Compliance, Trade Licenses, Business Permits."
        }
      ]
    }
  ],
  "scoring": {
    "Technical compliance": 30,
    "Delivery & warranty": 20,
    "Experience": 20,
    "Authorization & capacity": 20,
    "Value addition": 10
  }
}
