<script>
document.addEventListener("DOMContentLoaded", function () {
  const statusCounts = <%- JSON.stringify(statusCounts || {}) %>;
  const categoryStatusCounts = <%- JSON.stringify(categoryStatusCounts || []) %>;

  // ================= PIE CHART =================
  const pieCtx = document.getElementById("jobStatusChart").getContext("2d");
  const pieData = [
    statusCounts.Draft || 0,
    statusCounts.Open || 0,
    statusCounts.Closed || 0,
    statusCounts.Rejected || 0,
    statusCounts.Approved || 0,
  ];

  new Chart(pieCtx, {
    type: "pie",
    data: {
      labels: ["Draft", "Open", "Closed", "Rejected", "Approved"],
      datasets: [
        {
          data: pieData,
          backgroundColor: ["#ffc107", "#28a745", "#007bff", "#dc3545", "#17a2b8"],
          borderWidth: 2,
          hoverOffset: 10,
        },
      ],
    },
    options: {
      responsive: true,
      animation: {
        animateScale: true,
        animateRotate: true,
      },
      plugins: {
        legend: { position: "bottom" },
        datalabels: {
          color: "#fff",
          font: { weight: "bold", size: 12 },
          formatter: (value, ctx) => {
            const dataArr = ctx.chart.data.datasets[0].data;
            const total = dataArr.reduce((a, b) => a + b, 0);
            const percentage = ((value / total) * 100).toFixed(1) + "%";
            return percentage;
          },
          animation: {
            duration: 2000,
            easing: "easeOutBounce",
          },
        },
      },
    },
    plugins: [ChartDataLabels],
  });

  // ================= BAR CHART =================
  // Compute total tenders per category to sort them
  const sortedCategories = categoryStatusCounts
    .map(row => ({
      ...row,
      total:
        (row.Draft || 0) +
        (row.Open || 0) +
        (row.Closed || 0) +
        (row.Rejected || 0) +
        (row.Approved || 0),
    }))
    .sort((a, b) => b.total - a.total); // highest category first

  const labels = sortedCategories.map(row => row.category);

  const barCtx = document.getElementById("tendersBarChart").getContext("2d");
  new Chart(barCtx, {
    type: "bar",
    data: {
      labels: labels,
      datasets: [
        { label: "Draft", backgroundColor: "#ffc107", data: sortedCategories.map(r => r.Draft) },
        { label: "Open", backgroundColor: "#28a745", data: sortedCategories.map(r => r.Open) },
        { label: "Closed", backgroundColor: "#007bff", data: sortedCategories.map(r => r.Closed) },
        { label: "Rejected", backgroundColor: "#dc3545", data: sortedCategories.map(r => r.Rejected) },
        { label: "Approved", backgroundColor: "#17a2b8", data: sortedCategories.map(r => r.Approved) },
      ],
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      animation: {
        duration: 2000,
        easing: "easeOutElastic",
      },
      plugins: {
        legend: { position: "bottom" },
        title: {
          display: true,
          text: "Tenders per Category (Highest First)",
          font: { size: 16, weight: "bold" },
        },
        datalabels: {
          anchor: "end",
          align: "top",
          color: "#000",
          font: { weight: "bold" },
          formatter: (value) => (value > 0 ? value : ""),
        },
      },
      scales: {
        x: {
          title: { display: true, text: "Category", font: { weight: "bold" } },
          ticks: { autoSkip: false, maxRotation: 45, minRotation: 0 },
        },
        y: {
          beginAtZero: true,
          title: { display: true, text: "Number of Tenders", font: { weight: "bold" } },
          grace: "5%",
        },
      },
    },
    plugins: [ChartDataLabels],
  });
});
</script>
