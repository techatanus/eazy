<script>
  // Get greeting element
  const greetingEl = document.getElementById("greeting");

  // Replace with actual username dynamically (injected from server)
  const username = "<%= user.person %>";  

  // Get current hour
  const hour = new Date().getHours();
  let greeting;

  if (hour < 12) {
    greeting = "Good Morning";
  } else if (hour < 18) {
    greeting = "Good Afternoon";
  } else {
    greeting = "Good Evening";
  }

  // Update greeting
  greetingEl.textContent = `${greeting}! ${username}, Welcome Back `;
</script>

