    .c-applied{background: linear-gradient(135deg,#f59e0b,#d97706);} /* amber */
    .c-approved{background: linear-gradient(135deg,#7c3aed,#6d28d9);} /* purple */

    /* Open tenders table */
    .table-card {
      margin-top: 8px;
      background: white;
      padding: 14px;
      border-radius: 10px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.03);
    }

    /* popups anchored to icons */
    .floating-popup {
      position: absolute;
      width: 260px;
      max-width: 40vw;
      background: white;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.12);
      padding: 10px;
      z-index: 1200;
      display: none;
    }
    .floating-popup .item {
