/* Responsive tweaks */
@media (max-width: 768px) {
  .navbar-custom {
    margin-left: 0;
    flex-wrap: wrap;
  }
  .navbar-custom .left {
    width: 100%;
    margin-bottom: 10px;
  }
  .navbar-custom .right {
    width: 100%;
    justify-content: flex-end;
  }
}

  </style>
