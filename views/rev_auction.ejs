  <script>
    function registerBid(auctionId) {
      alert("Registered for auction: " + auctionId);
      // In a real system, this would be an AJAX request to backend
    }

    // Simulate real-time lowest bid updates
    setInterval(() => {
      document.querySelectorAll(".lowest-bid").forEach(cell => {
        let price = parseInt(cell.textContent.replace(/[^0-9]/g, ''));
        let change = Math.random() < 0.5 ? 0 : Math.floor(Math.random() * 200);
        cell.textContent = "$" + (price - change);
