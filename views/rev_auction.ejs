}

/* Profile dropdown */
.navbar-custom .dropdown-menu .dropdown-item.text-danger {
  color: #dc3545 !important;
}

.navbar-custom .dropdown-menu .dropdown-item.text-danger:hover {
  background: #f8d7da;
  color: #a71d2a !important;
