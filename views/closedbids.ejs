    html,body { height: 100%; margin: 0; font-family: "Segoe UI", system-ui, -apple-system, "Helvetica Neue", Arial; background: #f8f9fa; }

    /* NAVBAR (light green) */

    .topbar {
      height: var(--navbar-height);
      background: #7dd170; /* light green */
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 16px;
