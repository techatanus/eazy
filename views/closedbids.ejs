  <script>
    const closedBids = [
      {
        id: 1,
        code: "BID-091",
        title: "Supply of Office Furniture",
        categories: [
          { name: "Wooden Desks", supplier: "DevTech Ltd", rank: 1 },
          { name: "Office Chairs", supplier: "SoftLink Ltd", rank: 2 },
          { name: "Filing Cabinets", supplier: "Mobi Interiors", rank: 3 }
        ],
        closing_date: "2025-09-30",
        status: "Closed"
      },
      {
        id: 2,
        code: "BID-092",
        title: "ICT Equipment Supply",
        categories: [
          { name: "Laptops", supplier: "TechPoint", rank: 1 },
          { name: "Printers", supplier: "PrintPro", rank: 2 }
        ],
        closing_date: "2025-10-05",
        status: "Closed"
      }
    ];

    const tableBody = document.getElementById("closedBidsTable");

    function renderClosedBids(list) {
      tableBody.innerHTML = "";
      list.forEach((b, i) => {
        tableBody.innerHTML += `
          <tr>
            <td>${i + 1}</td>
            <td>${b.code}</td>
            <td>${b.title}</td>
            <td>${b.categories.length}</td>
            <td>${b.closing_date}</td>
            <td><span class="badge bg-secondary">${b.status}</span></td>
            <td>
              <button class="btn btn-sm btn-outline-primary" onclick="viewCategories('${b.title}', ${i})">
                <i class="bi bi-eye"></i> View
              </button>
            </td>
          </tr>`;
      });
    }

    function viewCategories(title, index) {
      const bid = closedBids[index];
      let html = `
        <h5 class="fw-bold text-success">${title}</h5>
        <table class="table table-bordered mt-3">
          <thead class="table-success">
            <tr>
              <th>#</th>
              <th>Category</th>
              <th>Supplier</th>
              <th>Rank</th>
            </tr>
          </thead>
          <tbody>`;
      
      bid.categories.forEach((cat, i) => {
        html += `
          <tr>
            <td>${i + 1}</td>
            <td>${cat.name}</td>
            <td>${cat.supplier}</td>
            <td><span class="badge bg-${cat.rank === 1 ? 'success' : 'secondary'}">${cat.rank}</span></td>
          </tr>`;
      });
      
      html += `</tbody></table>`;
      document.getElementById("categoriesContent").innerHTML = html;
      new bootstrap.Modal(document.getElementById('categoriesModal')).show();
    }

    function filterBids() {
      const val = document.getElementById("searchInput").value.toLowerCase();
      const filtered = closedBids.filter(b => b.title.toLowerCase().includes(val) || b.code.toLowerCase().includes(val));
      renderClosedBids(filtered);
    }

    // Initialize
    renderClosedBids(closedBids);
  </script>

