        <label class="form-label">Category Name</label>
        <input type="text" id="formName" class="form-control" placeholder="e.g., Supplier Prequalification Form" required>
      </div>

      <!-- Dynamic Fields Area -->
      <div id="fieldsArea"></div>

      <!-- Add Field Button -->
      <button type="button" class="btn btn-outline-primary mb-3" onclick="addField()">+ Add Field</button>

      <!-- Save Button -->
      <button type="submit" class="btn btn-primary">Save Form</button>
    </form>
  </div>
</div>

<script>
  let fieldCount = 0;

  // Function to dynamically add fields
  function addField() {
    fieldCount++;
    const fieldHTML = `
      <div class="card p-3 mb-2" id="field-${fieldCount}">
        <div class="mb-2">
          <label class="form-label">Field Label</label>
          <input type="text" class="form-control" placeholder="e.g., Company Name" required>
        </div>
        <div class="mb-2">
          <label class="form-label">Field Type</label>
          <select class="form-control">
            <option value="text">Text</option>
            <option value="textarea">Textarea</option>
            <option value="number">Number</option>
            <option value="file">File Upload</option>
            <option value="email">Email</option>
          </select>
        </div>
        <div class="mb-2">
          <label class="form-label">Required?</label>
          <select class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
          </select>
        </div>
        <button type="button" class="btn btn-sm btn-danger" onclick="removeField(${fieldCount})">Remove</button>
      </div>
    `;
    document.getElementById("fieldsArea").insertAdjacentHTML("beforeend", fieldHTML);
  }

  // Function to remove field
  function removeField(id) {
    document.getElementById(`field-${id}`).remove();
  }

  // Save form structure as JSON
  document.getElementById("formSetup").addEventListener("submit", function(e) {
    e.preventDefault();

    const formName = document.getElementById("formName").value.trim();
    if (!formName) {
      alert("Form name is required!");
      return;
    }

    const fields = [];
    document.querySelectorAll("#fieldsArea .card").forEach(card => {
      const label = card.querySelector("input").value;
      const type = card.querySelector("select:nth-of-type(1)").value;
      const required = card.querySelector("select:nth-of-type(2)").value === "true";
      fields.push({ label, type, required });
    });

    const formData = {
      formName,
      fields
    };

    // Save JSON as file
    const blob = new Blob([JSON.stringify(formData, null, 2)], { type: "application/json" });
    const link = document.createElement("a");
    link.href = URL.createObjectURL(blob);
    link.download = `${formName.replace(/\s+/g, "_")}.json`;
    link.click();
  });
</script>


