<script>
document.addEventListener("DOMContentLoaded", async () => {
  // Fetch job_id from session silently
  try {
    const res = await fetch("/api/get-session", { credentials: "include" });
    if (res.ok) {
      const data = await res.json();
      if (data.job_id) {
        // Set the hidden field value for all forms
        document.querySelectorAll('input[name="job_id"]').forEach(input => {
          input.value = data.job_id;
        });
        console.log("Job ID from session:", data.job_id);
      }
    } else {
      console.warn("No job ID found in session");
    }
  } catch (err) {
    console.error("Error fetching job_id:", err);
  }

  // Handle "Next" button clicks (manual tab move)
  document.querySelectorAll(".next-tab").forEach(button => {
    button.addEventListener("click", () => {
      const activeTab = document.querySelector(".nav-link.active");
      const tabs = Array.from(document.querySelectorAll(".nav-link"));
      const currentIndex = tabs.indexOf(activeTab);
      if (currentIndex < tabs.length - 1) {
        const nextTab = tabs[currentIndex + 1];
        const tabTrigger = new bootstrap.Tab(nextTab);
        tabTrigger.show();
      }
    });
  });

  // Apply to all forms inside tab-content
  document.querySelectorAll(".tab-content form").forEach(form => {
    form.addEventListener("submit", async function (e) {
      e.preventDefault();
      const formData = new FormData(form);
      const enctype = form.getAttribute("enctype");
      let options = { method: form.method.toUpperCase() };

      // Handle normal and file uploads
      if (enctype === "multipart/form-data") {
        options.body = formData; // allow file upload
      } else {
        const formObject = Object.fromEntries(formData.entries());
        options.headers = { "Content-Type": "application/x-www-form-urlencoded" };
        options.body = new URLSearchParams(formObject).toString();
      }

      try {
        const response = await fetch(form.action, options);

        if (response.ok) {
          alert("âœ… Data saved successfully!");

          // Move automatically to next tab
          const activeTab = document.querySelector(".nav-link.active");
          const tabs = Array.from(document.querySelectorAll(".nav-link"));
          const currentIndex = tabs.indexOf(activeTab);
          if (currentIndex < tabs.length - 1) {
            const nextTab = tabs[currentIndex + 1];
            const tabTrigger = new bootstrap.Tab(nextTab);
            tabTrigger.show();
          }

          // Reset form after success
          form.reset();

          // Re-assign job_id to the hidden input again
          document.querySelectorAll('input[name="job_id"]').forEach(input => {
            input.value = data.job_id;
          });

        } else {
          const errText = await response.text();
          alert("âš ï¸ " + errText);
        }
      } catch (err) {
        console.error("âŒ Error submitting form:", err);
        // alert("Server error: " + err.message);
      }
    });
  });
});
