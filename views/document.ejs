<!-- Modal -->
<div class="modal fade" id="supplierModal" tabindex="-1" aria-labelledby="supplierModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="supplierModalLabel">Supplier Registration & Compliance</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <!-- Nav Tabs -->
        <ul class="nav nav-tabs mb-3 text-success" id="formTabs" role="tablist">
          <li class="nav-item">
            <button class="nav-link active text-success" id="registration-tab" data-bs-toggle="tab" data-bs-target="#registration" type="button" role="tab">Registration</button>
          </li>
          <li class="nav-item">
            <button class="nav-link text-success" id="statutory-tab" data-bs-toggle="tab" data-bs-target="#statutory" type="button" role="tab">Statutory Requirements</button>
          </li>
          <li class="nav-item">
            <button class="nav-link text-success" id="compliance-tab" data-bs-toggle="tab" data-bs-target="#compliance" type="button" role="tab">Compliance</button>
          </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="formTabsContent">

          <!-- Registration Form -->
          <div class="tab-pane fade show active" id="registration" role="tabpanel" >
            <form id="registrationForm" method="post" action="/regdetails" >
              <h6 class="section-title text-success">Company Registration</h6>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label">Company Name</label>
                  <input type="text" value="<%=supplier.name %>" name="cname" class="form-control" required readonly>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">Email</label>
                  <input type="email" name="email" value="<%=supplier.email %>" class="form-control" required readonly>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">Website</label>
                  <input type="url" name="website" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">Phone</label>
                  <input type="tel" name="tel" class="form-control" required>
                </div>

                <!-- Location: Country -> County -> Subcounty -->
                <div class="col-md-4 mb-3">
                  <label class="form-label">Country</label>
                  <select class="form-select" name="country" id="countrySelect">
                    <option value="">Select Country</option>
                    <option value="Kenya">Kenya</option>
                    <option value="Uganda">Uganda</option>
                  </select>
                </div>
                <div class="col-md-4 mb-3">
                  <label class="form-label">County</label>
                  <select class="form-select" name="county" id="countySelect">
                    <option value="">Select County</option>
                  </select>
                </div>
                <div class="col-md-4 mb-3">
                  <label class="form-label">Subcounty</label>
                  <select class="form-select" name="subcounty" id="subcountySelect">
                    <option value="">Select Subcounty</option>
                  </select>
                </div>

                <div class="col-md-6 mb-3">
                  <label class="form-label">Type of Entity</label>
                  <select class="form-select" name="entity">
                    <option value="">Select Ownership</option>
                    <option>Private</option>
                    <option>Public</option>
                    <option>Partnership</option>
                    <option>Sole Proprietorship</option>
                  </select>
                </div>
                   <div class="col-md-6 mb-3">
                  <label class="form-label">Attach company profile</label>
                  <input type="file"  name="profile" class="form-control" required accept=".pdf">
                </div>
              </div>
            </form>
          </div>

          <!-- Statutory Requirement Form -->
          <div class="tab-pane fade" id="statutory" role="tabpanel">
            <form id="statutoryForm" action="/sub_stat" method="post">
              <h6 class="section-title text-success">Statutory Requirements</h6>
              <div class="mb-3">
                <label class="form-label">Certificate of Incorporation</label>
                <input type="file" name="coi" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">Company Registration Number</label>
                <input type="text" name="crn" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">Shareholding & Directors</label>
                <input type="file" name="sad" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">Number of Directors</label>
                <input type="number" name="nod" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">KRA PIN</label>
                <input type="text" name="kra" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">Tax Compliance Certificate</label>
                <input type="file" name="tcc" class="form-control">
              </div>
                <div class="mb-3">
                <label class="form-label">TCC_NO</label>
                <input type="number" name="tcno" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">Business Permit</label>
                <input type="file" name="permit" class="form-control mb-2">
                <label class="form-label for="">Expiry Date</label>
                <input type="date" name="expd" class="form-control" placeholder="Expiry Date">
              </div>
              <div class="mb-3">
                <label class="form-label">AGPO Category</label>
                <select class="form-select" name="agpo">
                  <option value="">Select</option>
                  <option>Youth</option>
                  <option>Women</option>
                  <option>Persons with Disability</option>
                </select>
              </div>
            </form>
          </div>

        <!-- Compliance Form -->
<div class="tab-pane fade" id="compliance" role="tabpanel">
  <form id="complianceForm" action="/comply" method="post">
    <h6 class="section-title text-success">Compliance Documents</h6>

    <div id="complianceFields">
