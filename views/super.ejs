   <style>

    body { font-family: 'Segoe UI', sans-serif; background: #f8f9fa; }
    .sidebar { width: 250px; height: 100vh; position: fixed; top: 0; left: 0; background: #198754; color: white; padding: 15px; }
    .sidebar .nav-link { color: white; padding: 10px; border-radius: 6px; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { background: rgba(255,255,255,0.15); }
    .content { margin-left: 250px; padding: 20px; }
    .topbar { position: sticky; top: 0; z-index: 1000; background: #d1e7dd; padding: 10px 20px; display: flex; justify-content: space-between; align-items: center; }
    .nav-actions { display: flex; align-items: center; gap: 15px; }
    .nav-icon { cursor: pointer; font-size: 1.2rem; position: relative; }
    .icon-badge::after { content: attr(data-count); position: absolute; top: -6px; right: -8px; background: red; color: white; font-size: 0.7rem; padding: 2px 5px; border-radius: 50%; display: none; }
    .icon-badge[data-count]:not([data-count="0"])::after { display: inline-block; }
    .add-btn { position: absolute; top: -25px; right: 20px; background-color: #0dcaf0; color: white; border-radius: 50%; width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; font-size: 24px; box-shadow: 0 4px 8px rgba(0,0,0,0.15); cursor: pointer; transition: 0.3s; }
