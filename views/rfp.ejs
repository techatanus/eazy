<body>
   <!-- Sidebar (light) -->
   <%- include('partials/sidebar') %>

    <!-- Top Navbar (light green) -->
     <%- include('partials/topbar') %>
<div class="content">
  <h2 class="text-center text-primary mb-4">Request for Proposal (RFP)</h2>

<!-- Tabs -->
<ul class="nav nav-tabs" id="rfpTabs" role="tablist">
  <!-- NEW JOB TAB -->
  <li class="nav-item" role="presentation">
    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#newJob" type="button">
      New Job
    </button>
  </li>

  <!-- CREATE RFP TAB -->
  <li class="nav-item" role="presentation">
    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#createRFP" type="button">
      Create RFP
    </button>
  </li>

  <!-- SUBMISSIONS TAB -->
  <li class="nav-item" role="presentation">
    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#vendorSubmissions" type="button">
      Submitted RFPs
    </button>
  </li>
</ul>

<!-- TAB CONTENT → ONLY ONE WRAPPER -->
<div class="tab-content bg-white border border-top-0 p-4">

  <!-- NEW JOB -->
  <div class="tab-pane fade show active" id="newJob">
    <h5 class="text-success mb-3">Create New Job</h5>
    <form action="/create_jobrfp" method="post">

      <div class="mb-3">
        <label class="form-label">Client</label>
        <select name="client" class="form-select">
          <% if (test && test.length > 0) { %>
            <% test.forEach(t => { %>
              <option value="<%= t.name %>"><%= t.name %></option>
            <% }) %>
          <% } else { %>
            <option disabled>No clients found</option>
          <% } %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Bid Title</label>
        <input type="text" name="bid_title" class="form-control" required>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label">Start Date & Time</label>
          <input type="datetime-local" name="start_datetime" class="form-control" required>
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label">Closing Date & Time</label>
          <input type="datetime-local" name="closing_datetime" class="form-control" required>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Eligibility Criteria</label>
        <select name="eligibility[]" class="form-select" >
          <option value="All">All</option>
          <option value="Youth">Youth</option>
          <option value="Women">Women</option>
          <option value="PWDs">PWDs</option>
        </select>
        <small class="text-muted">Hold Ctrl (Cmd on Mac) to select multiple</small>
      </div>

      <button type="submit" class="btn btn-primary">Create Job</button>
    </form>
  </div>

  <!-- CREATE RFP -->
<!-- CREATE RFP -->
<div class="tab-pane fade" id="createRFP">
  <h5 class="text-success mb-3">Create New RFP</h5>
  <form action="/create_rfp" method="post" enctype="multipart/form-data">
    <div class="row g-3">
      <!-- Project Title -->
      <div class="col-md-6">
        <label class="form-label">Project Title</label>
        <input type="text" class="form-control" name="p_title" required>
      </div>

      <!-- Template -->
      <div class="col-md-6">
        <label class="form-label">Select Template</label>
        <select name="template" class="form-select" required>
          <option value="">-- Select --</option>
          <option value="goods">Goods</option>
          <option value="service">Service</option>
          <option value="works">Works</option>
        </select>
      </div>

      <!-- Description -->
      <div class="col-md-6">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" name="description" placeholder="Enter description">
      </div>

      <!-- Submission Deadline -->
      <div class="col-md-6">
        <label class="form-label">Submission Deadline</label>
        <input type="date" name="duration" class="form-control">
      </div>

      <!-- Budget Estimate -->
      <div class="col-md-6">
        <label class="form-label">Budget Estimate</label>
        <input type="text" class="form-control" name="budget" placeholder="Enter budget">
      </div>

      <!-- File Upload (if you want PDF attachment) -->
      <div class="col-md-6">
        <label class="form-label">Attach File</label>
        <input type="file" class="form-control" name="f_prop" accept=".pdf">
      </div>
    </div>

    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Submit RFP</button>
    </div>
  </form>
</div>

  <!-- SUBMITTED RFPs -->
  <div class="tab-pane fade" id="vendorSubmissions">
    <h5 class="text-success mb-3">Vendor Submissions</h5>

    <table class="table table-borderless">
      <thead class="table-light">
        <tr>
          <th>CLient</th>
          <th>Bid Title</th>
          <th>Description</th>
          <th>Deadline</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      <%if(rfps && rfps.length > 0){ %>
		  <% rfps.forEach((rfp, index)=>{ %>
			  
			    <tr>
          <td><%=rfp.client %></td>
         <td><%=rfp.p_title %></td>
          <td><%=rfp.description %></td>
           <td><%=rfp.duration.toLocaleString() %></td>
          <td><span class="badge bg-warning">view</span></td>
        </tr>
	  			<%  }) %>
		  
		 <% }else{%>
			  
			  <td>No Rfps Submitted at the moment</td>
			  
			<%  } %>
    
      </tbody>
    </table>
  </div>

</div> <!-- END TAB CONTENT -->

    <!-- Evaluation -->
    <div class="tab-pane fade" id="evaluation">
      <h5 class="text-success mb-3">Evaluation Progress</h5>
      <div class="milestone active">
        <div class="step">1</div> RFP Created
      </div>
      <div class="milestone done">
        <div class="step">2</div> Submissions Received
      </div>
      <div class="milestone active">
        <div class="step">3</div> Technical Evaluation
      </div>
      <div class="milestone">
        <div class="step">4</div> Financial Evaluation
      </div>
      <div class="milestone">
        <div class="step">5</div> Final Selection & Award
