    </div>

    <!-- Bidder Portal -->
    <div class="tab-pane fade" id="bidderPortal">
      <h5 class="text-success mb-3">Bidder Portal – Track Proposal</h5>
      <form>
        <div class="mb-3">
          <label class="form-label">Enter Proposal Reference ID</label>
          <input type="text" class="form-control" placeholder="e.g. RFP-2025-001">
        </div>
        <button type="button" class="btn btn-primary" onclick="showStatus()">Check Status</button>
      </form>
