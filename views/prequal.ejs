// Core elements
const cartIcon = document.getElementById("cartIcon");
const cartModal = new bootstrap.Modal(document.getElementById("cartModal"));
const cartBody = document.getElementById("cartItemsBody");
const clearCartBtn = document.getElementById("clearCartBtn");
const payBtn = document.getElementById("payBtn");

// M-PESA modal elements
const mpesaModal = new bootstrap.Modal(document.getElementById("mpesaModal"));
const mpesaForm = document.getElementById("mpesaForm");
const mpesaPhone = document.getElementById("mpesaPhone");
const mpesaAmount = document.getElementById("mpesaAmount");
const jobIdsInput = document.getElementById("jobIds"); // hidden input

// Load cart from localStorage
let cart = JSON.parse(localStorage.getItem("tenderCart")) || [];

// -------------------------------
// Update cart badge
// -------------------------------
function updateCartBadge() {
    cartIcon.setAttribute("data-count", cart.length);
}

// -------------------------------
// Render cart items in modal
// -------------------------------
function renderCart() {
    cartBody.innerHTML = "";
    if (cart.length === 0) {
        cartBody.innerHTML = `<tr><td colspan="5" class="text-center text-muted">No jobs added.</td></tr>`;
        return;
    }

    cart.forEach((item, index) => {
        cartBody.innerHTML += `
        <tr>
            <td>${index + 1}</td>
            <td>${item.title}</td>
            <td>${item.code}</td>
            <td>${item.price.toFixed(2)}</td>
            <td>
                <button class="btn btn-sm btn-danger remove-item" data-id="${item.id}">
                    <i class="bi bi-x-circle"></i> Remove
                </button>
            </td>
        </tr>`;
    });
}

// -------------------------------
// Add to cart logic
// -------------------------------
document.addEventListener("click", (e) => {
    // Add to cart
    const addBtn = e.target.closest(".add-to-cart");
    if (addBtn) {
        const tender = {
            id: addBtn.dataset.id,
            title: addBtn.dataset.title,
            code: addBtn.dataset.code,
            price: parseFloat(addBtn.dataset.price) || 0
        };

        if (cart.some(item => item.id == tender.id)) {
            alert("This job is already in your cart!");
            return;
        }

        cart.push(tender);
        localStorage.setItem("tenderCart", JSON.stringify(cart));
        updateCartBadge();
        renderCart();

        addBtn.innerHTML = '<i class="bi bi-check2-circle"></i> Added';
        addBtn.classList.replace("btn-success", "btn-secondary");
        addBtn.disabled = true;
        return;
    }

    // Remove item from cart
    const removeBtn = e.target.closest(".remove-item");
    if (removeBtn) {
        const id = removeBtn.dataset.id;
        cart = cart.filter(item => item.id != id);
        localStorage.setItem("tenderCart", JSON.stringify(cart));
        updateCartBadge();
        renderCart();

        // Re-enable the Add button for removed job
        const reAddBtn = document.querySelector(`.add-to-cart[data-id="${id}"]`);
        if (reAddBtn) {
            reAddBtn.disabled = false;
            reAddBtn.classList.replace("btn-secondary", "btn-success");
            reAddBtn.innerHTML = 'Add';
        }
        return;
    }
});

// -------------------------------
// Clear entire cart
// -------------------------------
clearCartBtn.addEventListener("click", () => {
    if (!confirm("Clear all jobs from your cart?")) return;

    cart.forEach(item => {
        const btn = document.querySelector(`.add-to-cart[data-id="${item.id}"]`);
        if (btn) {
            btn.disabled = false;
            btn.classList.replace("btn-secondary", "btn-success");
            btn.innerHTML = 'Add';
        }
    });

    cart = [];
    localStorage.removeItem("tenderCart");
    updateCartBadge();
    renderCart();
});

// -------------------------------
// Open M-PESA modal
// -------------------------------
payBtn.addEventListener("click", () => {
    if (cart.length === 0) {
        alert("Your cart is empty.");
        return;
    }

    const total = cart.reduce((sum, item) => sum + item.price, 0);
    mpesaAmount.value = total.toFixed(2);

    // Use category codes instead of job IDs
    jobIdsInput.value = cart.map(item => item.code).join(",");

    mpesaModal.show();
});

// -------------------------------
// Handle M-PESA form submission
// -------------------------------
mpesaForm.addEventListener("submit", async (e) => {
    e.preventDefault();

    const phone = mpesaPhone.value.trim();
    const amount = mpesaAmount.value;
    const categoryCodes = cart.map(item => item.code).join(",");
    jobIdsInput.value = categoryCodes;

    if (!phone.match(/^2547\d{8}$/)) {
        alert("Enter a valid phone number starting with 2547");
        return;
    }

    try {
        const response = await fetch("/stk_push", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                tel: phone,
                amount: amount,
                jobids: categoryCodes
            })
        });

        const data = await response.json();
        console.log("Server response:", data);

        if (data.success) {
            alert(`ðŸ“² Payment initiated for Categories: ${categoryCodes} | KES ${amount}`);

            // Clear cart after successful submission
            cart.forEach(item => {
                const btn = document.querySelector(`.add-to-cart[data-id="${item.id}"]`);
                if (btn) {
                    btn.disabled = false;
                    btn.classList.replace("btn-secondary", "btn-success");
                    btn.innerHTML = 'Add';
                }
            });

            cart = [];
            localStorage.removeItem("tenderCart");
            updateCartBadge();
            renderCart();

            mpesaModal.hide();
            cartModal.hide();
        } else {
            alert("âŒ Payment failed: " + data.message);
        }
    } catch (err) {
        console.error(err);
        alert("âŒ An error occurred while submitting the payment.");
    }
});

// -------------------------------
// Show cart modal
// -------------------------------
cartIcon.addEventListener("click", () => {
    renderCart();
    cartModal.show();
});

