    .c-admin{background: linear-gradient(135deg,#3b82f6,#2563eb);}  /* blue */
    .c-client{background: linear-gradient(135deg,#10b981,#059669);} /* green */
    .c-supplier{background: linear-gradient(135deg,#fb923c,#f97316);}/* orange */
