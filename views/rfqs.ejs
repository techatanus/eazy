<script>
  // Dummy RFQ Data
  const rfqs = [
    {id: 1, code: "RFQ-101", description: "Supply of Printers", deadline: "2025-11-03", status: "Open"},
    {id: 2, code: "RFQ-102", description: "Network Cables Supply", deadline: "2025-11-07", status: "Open"}
  ];

  const rfqList = document.getElementById("rfqList");

  // Populate table
  rfqs.forEach((r, i) => {
    rfqList.innerHTML += `
      <tr>
        <td>${i + 1}</td>
        <td>${r.code}</td>
        <td>${r.description}</td>
        <td>${r.deadline}</td>
        <td><span class="badge bg-success">${r.status}</span></td>
        <td><button class="btn btn-sm btn-success" onclick="openQuotationModal(${r.id}, '${r.description}')">Submit Quotation</button></td>
      </tr>`;
  });

  const quotationModal = new bootstrap.Modal(document.getElementById('quotationModal'));

  // Open modal and set RFQ data
  function openQuotationModal(id, desc) {
    document.getElementById("rfqId").value = id;
    document.getElementById("itemDesc").value = desc;
    quotationModal.show();
  }

  // Handle form submission
  document.getElementById("quotationForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    try {
      const res = await fetch("/rfq/submit", {
        method: "POST",
        body: formData
      });

      if (res.ok) {
        alert("Quotation submitted successfully!");
        quotationModal.hide();
        e.target.reset();
      } else {
        alert("Error submitting quotation.");
      }
    } catch (err) {
      console.error(err);
      alert("An error occurred. Try again later.");
    }
  });
</script>

