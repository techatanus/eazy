<body>
<div class="container py-5">
<!-- Available Questionnaires -->
<div class="card p-4 shadow-sm mb-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="section-title mb-0 text-success">1. CLick The Tab below To Proceed to Questionnaire</h5>
    <p class="mb-0 text-end">
      <a href="/admin/dashsup" class="btn btn-sm btn-outline-secondary">Back to Dashboard</a>
    </p>
  </div>

  <% if (uploads && uploads.length > 0) { %>
    <div class="d-flex flex-wrap gap-2" title="click to proceed to questionnaire">
      <% uploads.forEach(u => { %>
        <button class="btn btn-outline-primary loadQBtn text-success"
                data-job="<%= u.job_id %>"
                data-category="<%= u.category %>"
                data-file="<%= u.file %>">
          <%= u.category %>
        </button>
      <% }) %>
    </div>
  <% } else { %>
    <p>No questionnaires available</p>
  <% } %>
</div>



