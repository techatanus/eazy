        <button type="submit" class="btn btn-primary">Save to DB</button>
        <button type="button" class="btn btn-secondary" id="closePreviewBtn" style="display:none;">Close Preview</button>
    </div>
</form>

    <div id="previewArea" class="mt-3"></div>
  </div>

</div>

