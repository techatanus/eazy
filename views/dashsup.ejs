<script>
  // --- CART SYSTEM ---
  const cartIcon = document.getElementById("cartIcon");
  const cartModal = new bootstrap.Modal(document.getElementById("cartModal"));
  const cartBody = document.getElementById("cartItemsBody");
  const clearCartBtn = document.getElementById("clearCartBtn");
  const payBtn = document.getElementById("payBtn");
  let cart = JSON.parse(localStorage.getItem("tenderCart")) || [];

  // Update cart badge count
  function updateCartBadge() {
    cartIcon.setAttribute("data-count", cart.length);
  }

  // Render cart items in modal
  function renderCart() {
    cartBody.innerHTML = "";
    if (cart.length === 0) {
      cartBody.innerHTML = `<tr><td colspan="5" class="text-center text-muted">No jobs added to cart.</td></tr>`;
      return;
    }

    cart.forEach((item, index) => {
      cartBody.innerHTML += `
        <tr>
          <td>${index + 1}</td>
          <td>${item.title}</td>
          <td>${item.code}</td>
          <td>${item.company}</td>
          <td>
            <button class="btn btn-sm btn-danger remove-item" data-id="${item.id}">
              <i class="bi bi-x-circle"></i> Remove
            </button>
          </td>
        </tr>`;
    });
  }

  // Add to Cart Logic
  document.addEventListener("click", function(e) {
    if (e.target.closest(".add-to-cart")) {
      const btn = e.target.closest(".add-to-cart");
      const tender = {
        id: btn.dataset.id,
        title: btn.dataset.title,
        company: btn.dataset.company,
        code: btn.dataset.code
      };

      // Check if already added
      if (cart.some(item => item.id === tender.id)) {
        alert("This job is already in your cart!");
        return;
      }

      cart.push(tender);
      localStorage.setItem("tenderCart", JSON.stringify(cart));
      updateCartBadge();
      renderCart();

      btn.innerHTML = '<i class="bi bi-check2-circle"></i> Added';
      btn.classList.replace('btn-success', 'btn-secondary');
      btn.disabled = true;
    }
  });

  // Remove single job
  document.addEventListener("click", function(e) {
    if (e.target.closest(".remove-item")) {
      const id = e.target.closest(".remove-item").dataset.id;
      cart = cart.filter(item => item.id !== id);
      localStorage.setItem("tenderCart", JSON.stringify(cart));
      updateCartBadge();
      renderCart();
    }
  });

  // Clear entire cart
  clearCartBtn.addEventListener("click", () => {
    if (confirm("Are you sure you want to clear all jobs from your cart?")) {
      cart = [];
      localStorage.removeItem("tenderCart");
      updateCartBadge();
      renderCart();
    }
  });

  // Simulate M-Pesa STK Push
  payBtn.addEventListener("click", () => {
    if (cart.length === 0) {
      alert("Please add jobs to your cart before paying.");
      return;
    }

    // Simulated STK Push
    const phone = prompt("Enter your M-Pesa phone number (e.g. 2547XXXXXXXX):");
    if (phone) {
      alert(`ðŸ“² Initiating M-Pesa STK Push to ${phone}...\nPlease complete payment on your phone.`);
      // TODO: Call your Node.js STK Push API endpoint here.
    }
  });

  // Show modal when cart icon is clicked
  cartIcon.addEventListener("click", () => {
    renderCart();
    cartModal.show();
  });

  // Initial load
  updateCartBadge();
</script>

